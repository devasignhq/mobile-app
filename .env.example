# ─── General ───
NODE_ENV=development
PORT=3001

# ─── Database (used by Docker Compose & API) ───
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=devasign
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
# DATABASE_URL is auto-composed from the above POSTGRES_* variables.
# Set directly to override: DATABASE_URL=postgresql://user:password@localhost:5432/devasign

# ─── Redis ───
REDIS_URL=redis://localhost:6379

# ─── Authentication – GitHub OAuth ───
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback

# ─── Authentication – JWT ───
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nCHANGE_ME\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nCHANGE_ME\n-----END PUBLIC KEY-----"
JWT_EXPIRES_IN=15m

# ─── Stellar Blockchain ───
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_ISSUER_SECRET=

# ─── Gemini AI ───
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
